<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.mvc.chap04.repository.ScoreMapper">

<!--    정보 등록-->
    <insert id="save">
        INSERT INTO tbl_score
        (name, kor, eng, math, total, avg, grade)
        VALUES (#{name}, #{kor}, #{eng}, #{math} , #{total}, #{average}, #{grade})
    </insert>
<!--    정보 삭제-->

    <delete id="deleteByStuNum">
        DELETE FROM tbl_score
        WHERE stu_num = #{stuNum}
    </delete>
<!--    정보 수정-->
    <update id="modifyByStuNum">
        UPDATE tbl_score
        SET kor = #{kor}, eng = #{eng}, math = #{math}, total = #{total}, avg = #{average}, grade= #{grade}
        WHERE stu_num = #{stuNum}
    </update>
<!--    정보 전제조회-->
<!--    정보 개별조회-->
<!--    매핑은 이름 다른 경우에만! 사용. 나머지는 자동으로 처리해줌 -->
    <resultMap id="score" type="com.spring.mvc.chap04.entity.Score">

        <result property="stuNum" column="stu_num"/>
        <result property="average" column="avg"/>

    </resultMap>

    <select id="findAll" resultMap="score">
        SELECT * FROM tbl_score
    </select>

    <select id="findByStuNum" resultMap="score">
        SELECT * FROM tbl_score
        WHERE stu_num = #{stuNum}
    </select>

</mapper>